{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node18",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es2024",
      "dom",
      "dom.iterable"
    ],
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/map/proto/**/*",
    "src/sink/proto/**/*",
    "src/source/proto/**/*",
    "src/sourcetransformer/proto/**/*"
  ]
}